<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.q.shareplaylist.MyProfile">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/FrameLayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="My Information"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:textStyle="bold"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="#0C54FF"/>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#25ACFF"
        android:layout_below="@+id/FrameLayout"
        android:layout_height="200dp"
        android:id="@+id/imageContainer">

        <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/profile_image"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageContainer">

        <TextView
            android:text="Name: "
            android:textSize= "40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="45dp" />

        <TextView
            android:text="Gender: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gender"
            android:textSize= "20dp"
            android:layout_below="@+id/name"
            android:layout_alignLeft="@+id/name"
            android:layout_alignStart="@+id/name"
            android:layout_marginTop="22dp" />

        <TextView
            android:text="Birthday: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/birthday"
            android:layout_below="@+id/age"
            android:layout_alignLeft="@+id/age"
            android:layout_alignStart="@+id/age" />

        <TextView
            android:text="Age: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/age"
            android:layout_below="@+id/gender"
            android:layout_alignLeft="@+id/gender"
            android:layout_alignStart="@+id/gender" />

    </RelativeLayout>

</RelativeLayout>

